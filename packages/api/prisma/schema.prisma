generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username     String
  displayName  String?
  bio          String?
  avatarUrl    String?
  bannerUrl    String?
  schoolName   String
  class        String
  gender       String?
  birthday     DateTime
  goal         String?
  location     String?
  lastSwipe    DateTime @default(now())
  tokenVersion Int      @default(1)
  pushToken    String?
  hasLoggedIn  Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("users")
}
