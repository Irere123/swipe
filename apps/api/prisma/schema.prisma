generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username     String
  bio          String
  avatarUrl    String
  schoolName   String
  birthday     String
  gender       String
  location     String
  tokenVersion String
  createdAt    DateTime @default(now())

  @@map("users")
}
